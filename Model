#!/bin/bash
set -e

MODEL_DIR="models"

echo "Creating model directory..."
mkdir -p $MODEL_DIR
cd $MODEL_DIR

echo "Downloading TinyLlama 1.1B (Q4_K_M)..."
wget -c https://huggingface.co/TheBloke/TinyLlama-1.1B-Chat-v1.0-GGUF/resolve/main/tinyllama-1.1b-chat-v1.0.Q4_K_M.gguf

echo "Downloading Phi-2 (Q4_K_M)..."
wget -c https://huggingface.co/TheBloke/phi-2-GGUF/resolve/main/phi-2.Q4_K_M.gguf

echo "Done!"
echo "Models saved in: $(pwd)"
